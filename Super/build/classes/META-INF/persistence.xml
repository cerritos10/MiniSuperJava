<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SuperPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Entidad.Productos</class>
    <class>Entidad.Ventas</class>
    <class>Entidad.TipoProducto</class>
    <class>Entidad.Sequence</class>
    <class>Entidad.Usuarios</class>
    <class>Entidad.VistaProducto</class>
    <class>Entidad.ViewProducto</class>
    <class>Entidad.Compra</class>
    <class>Entidad.Clientes</class>
    <class>Entidad.DetalleVentas</class>
    <class>Entidad.ViewProductosFull</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
      <property name="javax.persistence.jdbc.user" value="miniSuper"/>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
      <property name="javax.persistence.jdbc.password" value="super"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
